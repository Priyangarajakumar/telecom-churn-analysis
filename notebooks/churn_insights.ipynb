# Telecom Churn Insights Notebook

import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

df = pd.read_csv('../data/telco_customer_churn_cleaned.csv')

# Churn Rate
churn_rate = df['churn'].value_counts(normalize=True) * 100
print("Churn Rate:")
print(churn_rate)

# Churn by Contract
plt.figure(figsize=(6,4))
sns.countplot(data=df, x='contract', hue='churn')
plt.title("Churn by Contract Type")
plt.xticks(rotation=20)
plt.show()

# Churn by Tenure Group
plt.figure(figsize=(6,4))
sns.countplot(data=df, x='tenure_group', hue='churn')
plt.title("Churn by Tenure Group")
plt.show()

# Monthly Charges â€“ Churn vs Active
plt.figure(figsize=(6,4))
sns.boxplot(data=df, x='churn', y='monthly_charges')
plt.title("Monthly Charges Distribution by Churn")
plt.show()
